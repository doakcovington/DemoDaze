      <%= link_to 'Create Demo Report', new_demo_report_path %>
      <%= link_to 'All Demo Reports', demo_reports_path %>
      <%= link_to 'Dealers', dealers_path %>
    </nav>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
