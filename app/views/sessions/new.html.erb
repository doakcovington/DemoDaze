<h1>Login to DemoDaze</h1>

<% if flash[:message] %>
    <%= flash[:message] %>
<% end %>

<%= form_for :user do |f| %> 
    <%= f.label :email %>
    <%= f.email_field :email %>
   
    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit "Login", :class => 'btn btn-primary' %>
<% end %>
